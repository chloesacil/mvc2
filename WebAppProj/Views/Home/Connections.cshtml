<!DOCTYPE html>
<html>

<head>

  <title>Connections</title>
  <!-- Stylesheets -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
  <link rel="stylesheet" href="~/mvc2.styles.css" asp-append-version="true">
  <link rel="stylesheet" href="Consnections.cshtml.css">
  <link rel="stylesheet" href="style.css"> <!-- Custom styles -->
</head>

<body>
  <!-- Navigation Bar (Assuming this is the NavBar partial view) -->
  @await Html.PartialAsync("NavBar")

  <!-- Main Content -->
  <div class="container">
    <div class="sign-up">
      <div class="already-have-an-account">
        Already have an account?
      </div>
      <div class="heading">
        <div class="welcome-to-grape-aid">
          Welcome to GrapeAid.
        </div>
        <div class="get-started-with-us">
          Get started with us.
        </div>
      </div>
      <div class="form">
        <!-- Form inputs -->
        <div class="input-group">
          <label for="first-name" class="input-label">First Name</label>
          <input type="text" id="first-name" class="input-field" placeholder="Enter your first name">
          <div class="input-rect"></div>
        </div>
        <div class="input-group">
          <label for="last-name" class="input-label">Last Name</label>
          <input type="text" id="last-name" class="input-field" placeholder="Enter your last name">
          <div class="input-rect"></div>
        </div>
        <div class="input-group">
          <label for="email" class="input-label">Email Address</label>
          <input type="email" id="email" class="input-field" placeholder="Enter your email address">
          <div class="input-rect"></div>
        </div>
        <div class="input-group">
          <label for="password" class="input-label">Password</label>
          <input type="password" id="password" class="input-field" placeholder="Enter your password">
          <div class="input-rect"></div>
        </div>
        <div class="input-group">
          <label for="repeat-password" class="input-label">Repeat Password</label>
          <input type="password" id="repeat-password" class="input-field" placeholder="Repeat your password">
          <div class="input-rect"></div>
        </div>
        <!-- Sign Up and Log In buttons -->
        <div class="button-group">
          <button class="sign-up-button">
            <div class="button"></div>
            <div class="sign-up2">Sign Up</div>
          </button>
          <button class="log-in-button">
            <div class="button2"></div>
            <div class="log-in">Log In</div>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer section -->
